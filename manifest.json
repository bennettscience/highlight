{
    "manifest_version": 2,
    "name":"Simple Highlighter",
    "version": "1.0",
    "icons": {
        "19":"img/img19.png",
        "48":"img/img48.png"
    },
    
    "content_scripts": [{                   // content script permissions
            "matches": ["<all_urls>"],
            "js":["js/contentscript.js"],
            "css":["js/style.css"]
        }],
    
     "background": {
        "scripts": [ "js/background.js" ]
    },
    
    "permissions":[ "tabs", "activeTab" ],
    
    "description": "Highlight web text and send it to a new Google Doc",
    
    "browser_action": {
        "default_icon": { "19":"img/img19.png" },
        "default_title":"Simple Highlighter"
    }
}